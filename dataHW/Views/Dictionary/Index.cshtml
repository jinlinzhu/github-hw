
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Dictionary Index</title>
</head>
<body>
    
    <!--Dictionary list-->
    <div class="w3-bar-block w3-black">
        <a href="@Url.Action("AddOne", "Dictionary")" class="w3-bar-item w3-button">Add one Item to Dictionary</a>
        <a href="@Url.Action("AddList", "Dictionary")" class="w3-bar-item w3-button">Add Huge List of Items to Dictionary</a>
        <a href="@Url.Action("Display", "Dictionary")" class="w3-bar-item w3-button">Display Dictionary</a>
        <a href="@Url.Action("Delete", "Dictionary")" class="w3-bar-item w3-button">Delete from Dictionary</a>
        <a href="@Url.Action("Clear", "Dictionary")" class="w3-bar-item w3-button">Clear Dictionary</a>
        <a href="@Url.Action("Search", "Dictionary")" class="w3-bar-item w3-button">Search Dictionary</a>
        <a href="@Url.Action("MainMenu", "Dictionary")" class="w3-bar-item w3-button">Return to Main Menu</a>
    </div>

    <!--Display viewbag-->
    @if (ViewBag.MyDictionary != null)
    {
        foreach (var sData in ViewBag.MyDictionary)
        {
            @sData
        }
    }

</body>
</html>
